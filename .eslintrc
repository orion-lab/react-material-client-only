{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "react/prop-types": [2, { ignore: ["dispatch"] }],
    "import/named": 1,
    "import/default": 1,
    "import/prefer-default-export": 0,
    // A jsx extension is not required for files containing jsx
    "react/jsx-filename-extension": 0, 
    "react/require-default-props": 0,
    // This rule struggles with flow and class properties
    "react/sort-comp": 0,
    // ignore linebreak style. the CRLF / LF endings wont matter
    // if a windows user correctly converts CRLF to LF upon commits otherwise
    // there are errors every line.
    "react/prefer-stateless-function": 0,
    "react/no-array-index-key": 0,
    "react/forbid-prop-types": [1, { "forbid": ["object", "array", "any"] }],
    "linebreak-style": 0,
    "prefer-promise-reject-errors": 0,
    "function-paren-newline": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "react/jsx-indent": 0,
    "react/jsx-closing-bracket-location": 0,
    "no-tabs": 0,
    "indent": 0,
    "import/prefer-default-exports": 0,
    "prefer-template": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/href-no-hash": 0,
    "class-methods-use-this": 0,
  }
}
